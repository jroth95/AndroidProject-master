<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"

    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin" tools:context=".MainActivity"
    android:background="@drawable/basketballcourt"
    android:id="@+id/layout">


    <ImageButton
        android:layout_width="175dp"
        android:layout_height="100dp"
        android:id="@+id/score_board"
        android:background="@drawable/scoreboard"
        android:onClick="clickScore"
        android:contentDescription="@string/scoreboard"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true" />

    <jar9fy.cs2110.virginia.edu.androidproject.ViewDrawer
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:id="@+id/view_drawer"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentBottom="true" />

</RelativeLayout>
